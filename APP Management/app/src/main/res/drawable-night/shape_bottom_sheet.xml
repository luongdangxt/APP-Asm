<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark shadow -->
    <item
        android:left="2dp"
        android:top="0dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="24dp" android:topRightRadius="24dp"/>
            <solid android:color="#30000000"/>
        </shape>
    </item>
    <!-- Light shadow (top edge) -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="24dp" android:topRightRadius="24dp"/>
            <solid android:color="#0FFFFFFF"/>
        </shape>
    </item>
    <!-- Main surface -->
    <item
        android:left="1dp"
        android:top="0dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="24dp" android:topRightRadius="24dp"/>
            <solid android:color="@color/surfaceCard"/>
        </shape>
    </item>
</layer-list>

