<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark shadow (bottom-right) -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Light shadow (top-left) -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#0FFFFFFF"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Main card surface -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/surfaceCard"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>

