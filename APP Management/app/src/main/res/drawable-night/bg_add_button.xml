<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow effect for circular button -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="oval">
            <size android:width="56dp" android:height="56dp"/>
            <solid android:color="#2000B4FF"/>
        </shape>
    </item>
    <!-- Main button surface -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <size android:width="52dp" android:height="52dp"/>
            <solid android:color="@color/accentBlue"/>
        </shape>
    </item>
</layer-list>

